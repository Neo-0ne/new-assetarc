{
  "info": {
    "name": "AssetArc Payments (Full)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{PAY_BASE}}/healthz"
      }
    },
    {
      "name": "Create NOW invoice",
      "request": {
        "method": "POST",
        "url": "{{PAY_BASE}}/payments/create-invoice/nowpayments",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 1000,\n  \"currency\": \"ZAR\"\n}"
        }
      }
    },
    {
      "name": "NOW IPN (simulate)",
      "request": {
        "method": "POST",
        "url": "{{PAY_BASE}}/webhook/nowpayments",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"payment_status\": \"finished\",\n  \"order_id\": \"ord_test\",\n  \"price_amount\": 1000,\n  \"price_currency\": \"ZAR\",\n  \"order_description\": \"AssetArc Service |email=test@example.com\"\n}"
        }
      }
    },
    {
      "name": "Yoco webhook (simulate)",
      "request": {
        "method": "POST",
        "url": "{{PAY_BASE}}/webhook/yoco",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"data\": {\"status\": \"successful\", \"customer\": {\"email\": \"test@example.com\"}, \"amount\": 1000, \"currency\": \"ZAR\"}\n}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "PAY_BASE",
      "value": "http://localhost:5011"
    }
  ]
}