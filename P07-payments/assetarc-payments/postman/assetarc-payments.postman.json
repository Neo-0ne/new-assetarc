{
  "info": {
    "name": "AssetArc Payments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{PAY}}/healthz"
      }
    },
    {
      "name": "Balance",
      "request": {
        "method": "GET",
        "url": "{{PAY}}/tokens/balance?email=test@example.com"
      }
    },
    {
      "name": "Grant tokens",
      "request": {
        "method": "POST",
        "url": "{{PAY}}/tokens/grant",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"test@example.com\",\"amount\":2}"
        }
      }
    },
    {
      "name": "Consume tokens",
      "request": {
        "method": "POST",
        "url": "{{PAY}}/tokens/consume",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"test@example.com\",\"amount\":1}"
        }
      }
    },
    {
      "name": "Webhook (simulate Yoco)",
      "request": {
        "method": "POST",
        "url": "{{PAY}}/webhook/yoco",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"test@example.com\",\"amount\":1500,\"metadata\":{\"tokens\":1}}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "PAY",
      "value": "http://localhost:5007"
    }
  ]
}