{
  "info": {
    "name": "AssetArc Vault",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{VAULT}}/healthz"
      }
    },
    {
      "name": "Upload",
      "request": {
        "method": "POST",
        "url": "{{VAULT}}/files/upload",
        "header": [
          {
            "key": "Content-Type",
            "value": "multipart/form-data"
          }
        ]
      }
    },
    {
      "name": "List",
      "request": {
        "method": "GET",
        "url": "{{VAULT}}/files"
      }
    },
    {
      "name": "Watermark",
      "request": {
        "method": "POST",
        "url": "{{VAULT}}/files/1/watermark"
      }
    },
    {
      "name": "Approve",
      "request": {
        "method": "POST",
        "url": "{{VAULT}}/files/1/approve"
      }
    },
    {
      "name": "Signed URL",
      "request": {
        "method": "POST",
        "url": "{{VAULT}}/files/1/signed-url",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"disposition\":\"inline\"}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "VAULT",
      "value": "http://localhost:5014"
    }
  ]
}