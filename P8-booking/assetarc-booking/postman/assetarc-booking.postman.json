{
  "info": {
    "name": "AssetArc Booking",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{BOOK}}/healthz"
      }
    },
    {
      "name": "Availability (sample)",
      "request": {
        "method": "GET",
        "url": "{{BOOK}}/availability?from=2025-08-11&to=2025-08-15"
      }
    },
    {
      "name": "My entitlements",
      "request": {
        "method": "GET",
        "url": "{{BOOK}}/entitlements"
      }
    },
    {
      "name": "Grant credit (internal)",
      "request": {
        "method": "POST",
        "url": "{{BOOK}}/entitlements/grant",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{INTERNAL_KEY}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\":\"test@example.com\",\n  \"amount\":1\n}"
        }
      }
    },
    {
      "name": "Calendly webhook (simulate)",
      "request": {
        "method": "POST",
        "url": "{{BOOK}}/webhook/calendly",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"event\":\"invitee.created\",\n  \"payload\": {\"invitee\": {\"email\":\"test@example.com\"}}\n}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "BOOK",
      "value": "http://localhost:5012"
    },
    {
      "key": "INTERNAL_KEY",
      "value": "change_me"
    }
  ]
}